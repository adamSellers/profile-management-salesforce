
{
  "name": "sf-profile-app",
  "description": "A reference app for salesforce profile management in react",
  "scripts": {
  },
  "env": {
    "APP_URL": {
      "required": true
    },
    "SFCLIENTID": {
      "required": true
    },
    "SFCLIENTSECRET": {
      "required": true
    },
    "SESSIONKEY": {
      "required": true,
      "description": "A secret key for securing cookies",
      "generator": "secret"
    },
    "REDIS_URL": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgres",
    "papertrail",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}